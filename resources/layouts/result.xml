<layout id="ResultLayout">
    <bitmap id="CupIcon" x="center" y="0" filename="../drawables/cup_icon.png" />

	<label id="Result_WinnerDescription" x="center" y="center" text="@Strings.Result_WinnerDescription"
		font="Graphics.FONT_LARGE"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
	<label id="Result_Winner" x="center" y="dc.getHeight() / 2 + 10" text="-"
		font="Graphics.FONT_LARGE"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
		
	<label x="center"
		y="dc.getHeight() / 2 + Graphics.getFontHeight(Graphics.FONT_TINY) * 2"
		text="@Strings.Result_MatchLength" font="Graphics.FONT_XTINY"
		color="Graphics.COLOR_GREEN"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
	<label id="Result_MatchLength" x="center"
		y="dc.getHeight() / 2 + Graphics.getFontHeight(Graphics.FONT_TINY) * 2 + 15"
		text="0" font="Graphics.FONT_LARGE" color="Graphics.COLOR_GREEN"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
</layout>
