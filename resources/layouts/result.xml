<layout id="ResultLayout">
	<label id="Result_Winner" x="center" y="center" text="WINNER"
		font="Graphics.FONT_LARGE"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
	<label x="center"
		y="dc.getHeight() / 2 + Graphics.getFontHeight(Graphics.FONT_LARGE)"
		text="Match length:" font="Graphics.FONT_XTINY"
		color="Graphics.COLOR_GREEN"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
	<label id="Result_MatchLength" x="center"
		y="dc.getHeight() / 2 + Graphics.getFontHeight(Graphics.FONT_LARGE)+ Graphics.getFontHeight(Graphics.FONT_XTINY)"
		text="0" font="Graphics.FONT_LARGE" color="Graphics.COLOR_GREEN"
		justification="Graphics.TEXT_JUSTIFY_CENTER" />
</layout>
